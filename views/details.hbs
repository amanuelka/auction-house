<section id="catalog-section">

    <h1 class="item">
        {{title}}
        {{#if isOwner}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/auction/{{_id}}/edit">Edit</a>
            <a class="action pad-small f-left" href="/auction/{{_id}}/delete">Delete</a>
        </div>
        {{/if}}
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{category}}</strong></p>
                <p>{{description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{price}}</strong>
                    </div>
                    {{#if email}}
                        {{#if isOwner}}
                            <div>
                                {{#if bidder}}
                                Bid by <strong>{{bidder.firstName}} {{bidder.lastName}}</strong>

                                <!-- # Bonus: If there is a bidder -->
                                            <a class="action pad-med cta" href="/auction/{{_id}}/close">Close Auction</a>                                    
                                <!-- # End of Bonus -->

                                {{else}}
                                No bids
                                {{/if}}
                            </div>
                        {{else}}
                            {{#if isBidder}}
                            <div>
                                You are currently the <strong>highest bidder</strong> for this auction
                            </div>
                            {{else}}
                            <form class="vertical" action="/auction/{{_id}}/bid" method="post">
                                <label><span>Bid amount</span><input type="number" name="amount" value="{{amount}}"></label>
                                <input class="action" type="submit" value="Place bid">
                            </form>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                </div>

            </div>
        </div>

        <footer>Listed by {{author.firstName}} {{author.lastName}}</footer>
    </div>

</section>
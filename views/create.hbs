<section id="create-section" class="">

    <h1 class="item">New Auction</h1>

    <div class="item padded align-center">

        <form class="layout left large" method="post">

            <div class="col aligned">
                <label>
                    <span>Title</span>
                    <input type="text" name="title" value="{{title}}">
                </label>
                <label>
                    <span>Category</span>
                    <select name="category" >
                        <option value="{{category}}" hidden="hidden" selected="selected">{{category}}</option>
                        <option value="Real Estate">Real Estate</option>
                        <option value="Vehicles">Vehicles</option>
                        <option value="Furniture">Furniture</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Other">Other</option>
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type="text" name="imageUrl" value="{{imageUrl}}">
                </label>
                <label>
                    <span>Starting price</span>
                    <input type="number" name="price" value="{{price}}">
                </label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{description}}</textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Publish Item">
                </div>
            </div>

        </form>

    </div>

</section>